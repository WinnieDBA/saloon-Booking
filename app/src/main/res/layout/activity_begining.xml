<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/vera4"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BeginingActivity">

    <Button
        android:id="@+id/Btnbook"
        android:layout_width="132dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="157dp"
        android:text="Appointment Booking"
        android:textColor="#bc60f1"

        android:textStyle="bold" />

    <Button
        android:id="@+id/Btnadmin"
        android:layout_width="116dp"


        android:layout_height="60dp"
        android:layout_alignTop="@+id/Btnbook"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:background="#c9c7c7"
        android:text="Admin Login"
        android:textColor="#e667b3"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnservices"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="279dp"

        android:background="#c9c7c7"
        android:text="Services and Prices"
        android:textColor="#73f10c"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnfeedback"
        android:layout_width="124dp"
        android:layout_height="58dp"
        android:layout_alignTop="@+id/btnservices"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:background="#c9c7c7"
        android:text="CONTACT US"
        android:textColor="#72b4f5"
        android:textStyle="bold" />
</RelativeLayout>