<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#e699d1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:background="#e699d1"
        android:id="@+id/Birthday"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editname"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"

        android:layout_marginTop="83dp"
        android:clickable="true"
        android:editable="false"
        android:focusable="false"
        android:hint="Date" />

    <EditText
        android:id="@+id/editname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtphone"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="129dp"
        android:ems="10"
        android:hint="Name "
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edtemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editname"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="300dp"
        android:ems="10"
        android:hint="Service eg Blowdry,Shave"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/edtphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnview"
        android:layout_alignParentTop="true"
        android:layout_marginTop="221dp"
        android:layout_marginEnd="-15dp"
        android:ems="10"
        android:hint="Phone"
        android:inputType="phone" />

    <Button
        android:id="@+id/btnsave"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editname"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-14dp"
        android:layout_marginBottom="78dp"
        android:background="#80cef2"
        android:text="Submit"
        android:textColor="#c7129d" />

    <Button
        android:id="@+id/btnview"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnsave"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="74dp"
        android:layout_marginRight="74dp"
        android:layout_marginBottom="0dp"
        android:background="#62f56f"
        android:text="Admin View"
        android:textColor="#6295f4" />



</RelativeLayout>